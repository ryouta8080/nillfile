<?php
$imageUrl    = $this->view->imageUrl ?? '';
$downloadUrl = $this->view->downloadUrl ?? '';
$fileName = '';

// 表示タイトル用に f= からファイル名だけ抽出（movie: / image/ どちらでもOK）
if ($downloadUrl) {
  $qs = parse_url($downloadUrl, PHP_URL_QUERY);
  parse_str($qs, $q);
  if (!empty($q['f'])) {
    $f = $q['f'];
    if (strpos($f, ':') !== false) {
      [, $f] = explode(':', $f, 2);
    }
    $fileName = basename($f); // パスがあってもファイル名のみ
  }
}
?>
