<?php
$downloadUrl = $this->view->downloadUrl ?? '';
$fileUrl     = $this->view->fileUrl ?? '';
$fileType    = $this->view->fileType ?? 'file';

/**
 * 表示用ファイル名を downloadUrl から取得
 * 例: ?f=movie:kasumi_1.mp4 → kasumi_1.mp4
 */
$displayName = '';
if (!empty($downloadUrl)) {
    $qs = parse_url($downloadUrl, PHP_URL_QUERY);
    parse_str($qs, $q);

    if (!empty($q['f'])) {
        // movie:xxx または movie/xxx の両対応
        $f = $q['f'];

        // ":" があれば右側、それ以外はそのまま
        if (strpos($f, ':') !== false) {
            [, $f] = explode(':', $f, 2);
        }

        // パスが含まれていてもファイル名だけ取得
        $displayName = basename($f);
    }
}

