if (is_array($rawStats)) {
    foreach ($rawStats as $rowStat) {
        // 想定：['action'=>'play'|'download','code'=>'movie:xxx.mp4','cnt'=>数字]
        $action = $rowStat['action'] ?? '';
        $code   = $rowStat['code'] ?? '';
        $cnt    = (int)($rowStat['cnt'] ?? 0);
